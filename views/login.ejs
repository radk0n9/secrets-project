<%- include("partials/header") %>

<div class="container mt-5" id="login-section">
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title">Login <a id="btn-go-back" href="/">Home</a></h1>
                </div>
                <div class="card-body">
                    <form action="/login" method="post">
                        <div class="form-group">
                            <p class="card-title form-label">Email</p>
                            <input class="form-control card-text" type="email" name="username" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <p class="card-title form-label">Password</p>
                            <input class="form-control card-text" type="password" name="password" autocomplete="off">
                        </div>
                        <div id="btn-submit">
                            <button class="btn btn-dark card-text" type="submit" id="btn-log">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card" id="sign-up-google">
                <div class="card-body">
                    <a class="btn btn-black" id="button-google" href="/auth/google" role="button">
                        <i class="fab fa-google"></i>
                        Sign Up with Google
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer") %>